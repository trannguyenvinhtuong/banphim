<meta charset="utf-8" />

<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item carousel-banner active">
            <img src="~/Content/Img/banner-1.jpg" class="d-block w-100" alt="...">
